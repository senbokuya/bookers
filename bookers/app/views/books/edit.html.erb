<h1>Editing Book</h1>

<div class = "danger">
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
</div>
<%= form_with model: @book, url:update_book_path(@book.id), method: :patch, local: :true do |f| %>
  <div class="field">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  
  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>
  
  <%= link_to "Show", book_path(@book.id) %> 
  |
  <%= link_to "Back", action: :index %>
 <% end %>